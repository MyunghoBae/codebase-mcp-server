{
	"name": "codebase-mcp-server",
	"description": "Codebase Model Context Protocol Server",
	"version": "0.0.2",
	"main": "dist/index.js",
	"author": "MyunghoBae <mac.bae@goorm.io>",
	"homepage": "https://github.com/MyunghoBae/codebase-mcp-server",
	"repository": {
		"url": "https://github.com/MyunghoBae/codebase-mcp-server.git"
	},
	"bin": {
		"codebase-mcp-server": "dist/index.js"
	},
	"publishConfig": {
		"access": "public"
	},
	"files": [
		"dist"
	],
	"type": "module",
	"scripts": {
		"build": "rm -rf dist && tsc && chmod 755 dist/index.js",
		"inspect": "npm run build && mcp-inspector -- dist/index.js",
		"lint": "eslint src/**/*.ts --fix",
		"lint:check": "eslint src/**/*.ts",
		"format": "prettier . --write",
		"format:check": "prettier -c ."
	},
	"license": "MIT",
	"keywords": [
		"MCP",
		"Model Context Protocol",
		"filesystem",
		"dependency tree",
		"file management",
		"file search",
		"file metadata",
		"dependency analysis",
		"LLM integration",
		"secure filesystem",
		"efficient filesystem",
		"node.js",
		"typescript",
		"tool",
		"dependency resolution",
		"config file search",
		"directory listing",
		"file reading",
		"file searching",
		"file metadata retrieval"
	],
	"dependencies": {
		"@modelcontextprotocol/sdk": "^1.11.4",
		"dependency-tree": "^11.1.1",
		"minimatch": "^10.0.1",
		"zod": "^3.25.7"
	},
	"devDependencies": {
		"@eslint/js": "^9.27.0",
		"@modelcontextprotocol/inspector": "^0.14.1",
		"@types/node": "^22.15.24",
		"eslint": "^9.27.0",
		"globals": "^16.2.0",
		"husky": "^9.1.7",
		"lint-staged": "^16.1.0",
		"prettier": "3.5.3",
		"typescript": "^5.8.3",
		"typescript-eslint": "^8.33.0"
	},
	"engines": {
		"node": ">=18.19.0"
	},
	"lint-staged": {
		"*.ts": [
			"eslint",
			"prettier --list-different --ignore-unknown"
		]
	}
}
